<!DOCTYPE html>
<html lang="en">
<head>
    <title>Web Tour</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="/web.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <script>
        (function () {
            'use strict'
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')
            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
    
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Web Tour</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/tours">Tours</a></li>
            <li><a href="/tours/new">New Tour</a></li>
          </ul>
          
          <ul class="nav navbar-nav navbar-right">
              <% if(!currentUser) {%>
              <li><a class="nav-link" href="/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            
              <li><a class="nav-link" href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
              <% } else {%>
              <li><a class="nav-link" href="/logout"><span class="glyphicon glyphicon-user"></span> Log out</a></li>
              <% } %>
          </ul>
        </div>
      </nav>
      
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
          </ol>
      
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="/imgs/z50.jpg" alt="Image" style="height: 400px;">
              <div class="carousel-caption">
                <h3>New York City</h3>
                <p>Fun,Food,Shopping</p>
              </div>      
            </div>
      
            <div class="item">
              <img src="/imgs/z49.jpg" alt="Image" style="height: 400px;">
              <div class="carousel-caption">
                <h3>California </h3>
                <p>Ocean,Relax,Food</p>
              </div>      
            </div>
          </div>
      
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
      </div>
    <div class="row content">
        <div class="col-sm-4"></div>
        <div class="col-sm-5"> 
          
        <div>
            <br>
        </div>
        <form action="/tours" method="GET" class="form-inline">
          <div class="form-group">
              <input type="text" name="search" placeholder="search place..." class="form-control">
              <button type="submit"><i class="fa fa-search"></i></button>
          </div>

        </form>
        </div>
    </div>
    
    <br>
   
        <% for (let tour of tours) {%>
            <div class="card" mb-3>
                <div class="row content">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-5">
                        <img class="img-responsive" alt="" src="<%=tour.image%>" style="height: 300px; width:100%">
                    </div>
                    <div class="col-sm-3">
                        <div class="card-body">
                            <h5 class="card-title"><%=tour.title%></h5>
                            <p class="card-text"><%=tour.description%></p>
                            <p class="card-text">
                                <small class="text-muted"><%= tour.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/tours/<%=tour._id%>">View <%=tour.title%></a>
                        </div>
                    </div>
                    <div class="col-sm-2"></div>
                    
                </div>
            </div>
           <br>
        <%}%>


    <footer class="footer bg-dark py-3 mt-auto">
        <div class="container">
            <span class="text-muted">&copy; Tour 2022</span>
        </div>
     </footer>
    
</body>
</html>
